{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "env": {
    "VITE_API_URL": "/api"
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://aplikasi-kasir-backend.vercel.app/api/$1"
    },
    {
      "src": "/assets/.*",
      "dest": "/assets/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/.*\\.js",
      "dest": "/$0",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/.*\\.css",
      "dest": "/$0",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(?!assets|api).*",
      "dest": "/index.html"
    }
  ]
}
